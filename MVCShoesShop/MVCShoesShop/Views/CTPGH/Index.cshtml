@model IEnumerable<MVCShoesShop.Models.CT_PHIEU_GIAO_HANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center; font-weight:bold">Quản lý phiếu giao hàng</h1>

<table class="table">
    <tr>
        <th style="text-align:center">
            Mã phiếu giao hàng
        </th>
        <th style="text-align:center">
            Tên khách hàng
        </th>
        <th style="text-align:center">
            Tên sản phẩm
        </th>
        <th style="text-align:center">
            Số lượng
        </th>
        <th style="text-align:center">
            Đơn giá
        </th>
        <th style="text-align:center">
            Thành tiền
        </th>
        <th style="text-align:center"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="text-align:center">
            @Html.DisplayFor(modelItem => item.PHIEU_GIAO_HANG.MaPGH)
        </td>
        <td style="text-align:center">
            @Html.DisplayFor(modelItem => item.PHIEU_GIAO_HANG.KHACH_HANG.TenKH)
        </td>
        <td style="text-align:center">
            @Html.DisplayFor(modelItem => item.SAN_PHAM.TenSP)
        </td>
        <td style="text-align:center">
            @Html.DisplayFor(modelItem => item.SoLuong)
        </td>
        <td style="text-align:center">
            @String.Format("{0:0.00}", item.DonGia) $
        </td>
        <td style="text-align:center">
            @String.Format("{0:0.00}", item.ThanhTien) $
        </td>
        <td style="text-align:center">
            <a href="@Url.Action("Details","CTPGH", new{ id = item.MaPGH })" style="background-color:sandybrown; color:black; font-weight:bold; font-size:13pt; padding:5px 15px 5px 15px; text-align:center">
                Chi tiết
            </a> &nbsp;
            <a href="@Url.Action("Delete","CTPGH", new{ id = item.MaPGH })" style="background-color:indianred; color:black; font-weight:bold; font-size:13pt; padding:5px 15px 5px 15px; text-align:center">
                Xóa
            </a>
        </td>
    </tr>
}

</table>
