@model MVCShoesShop.Models.CT_HOA_DON

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center; font-weight:bold">Xóa hóa đơn</h2>

<h3 style="text-align:center; font-weight:bold">Bạn có muốn xóa hóa đơn này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <h3 style="font-weight:bold">Thông tin đơn đặt hàng</h3>
        @*Tên sản phẩm*@
        <dt>
            Tên sản phẩm :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SAN_PHAM.TenSP)
        </dd>
        @*Số lượng*@
        <dt>
            Số lượng :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SoLuong)
        </dd>
        @*Đơn giá*@
        <dt>
            Đơn giá :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DonGia) $
        </dd>
        @*Thành tiền*@
        <dt>
            Thành tiền :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ThanhTien) $
        </dd>
        @*Ngày lập hóa đơn*@
        <dt>
            Ngày lập đơn :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HOA_DON.NgayLapHD)
        </dd>
        @*Hình thức thanh toán*@
        <dt>
            Hình thức thanh toán :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HOA_DON.HinhThucThanhToan)
        </dd>
        @*Tổng tiền*@
        <dt>
            Tổng tiền :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HOA_DON.TongTien)
        </dd>
        @*Button*@
        <dt></dt>
        <dd>
            @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-default" style="background-color:yellowgreen; color:black; font-weight:bold; font-size:13pt; padding:5px 15px 5px 15px; text-align:center" />
                <a href="@Url.Action("Index","CTHD")" style="background-color:burlywood; color:black; font-weight:bold; font-size:13pt; padding:8px 15px 8px 15px; text-align:center">
                    Trở về
                </a>
            </div>
    }
        </dd>
    </dl>
</div>
