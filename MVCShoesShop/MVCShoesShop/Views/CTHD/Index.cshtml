@model IEnumerable<MVCShoesShop.Models.CT_HOA_DON>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center; font-weight:bold">Quản lý hóa đơn</h1>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th style="text-align:center">
            Mã hóa đơn
        </th>
        <th style="text-align:center">
            Tên sản phẩm
        </th>
        <th style="text-align:center">
            Số lượng
        </th>
        <th style="text-align:center">
            Đơn giá
        </th>
        <th style="text-align:center">
            Thành tiền
        </th>
        <th style="text-align:center"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.HOA_DON.MaHD)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.SAN_PHAM.TenSP)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td style="text-align:center">
                @String.Format("{0:0.00}", item.DonGia) $
            </td>
            <td style="text-align:center">
                @String.Format("{0:0.00}", item.ThanhTien) $
            </td>
            <td style="text-align:center">
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaHD }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaHD })
            </td>
        </tr>
    }

</table>
