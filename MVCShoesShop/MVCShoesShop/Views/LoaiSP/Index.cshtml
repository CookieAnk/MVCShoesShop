@model IEnumerable<MVCShoesShop.Models.LOAI_SAN_PHAM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="font-weight:bold; text-align:center">Quản lý loại sản phẩm</h1>

<a href="@Url.Action("Create","LoaiSP")" style="background-color:yellowgreen; color:black; font-weight:bold; font-size:15pt; padding:5px 15px 5px 15px">
    Thêm mới
</a>
<table class="table">
    <tr>
        <th style="text-align:center">
            Mã loại sản phẩm
        </th>
        <th style="text-align:center">
            Tên loại sản phẩm
        </th>
        <th style="text-align:center"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="text-align:center">
            @Html.DisplayFor(modelItem => item.MaLoaiSP)
        </td>
        <td style="text-align:center">
            @Html.DisplayFor(modelItem => item.TenLoai)
        </td>
        <td style="text-align:center">
            <a href="@Url.Action("Edit","LoaiSP", new{ id = item.MaLoaiSP })" style="background-color:deepskyblue; color:black; font-weight:bold; font-size:13pt; padding:5px 15px 5px 15px; text-align:center">
                Sửa
            </a> &nbsp;
            <a href="@Url.Action("Delete","LoaiSP", new{ id = item.MaLoaiSP })" style="background-color:indianred; color:black; font-weight:bold; font-size:13pt; padding:5px 15px 5px 15px; text-align:center">
                Xóa
            </a>
        </td>
    </tr>
}

</table>
