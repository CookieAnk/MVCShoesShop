<style type="text/css">
    #Datmua a {
        clear: both;
        color: navajowhite;
        display: block;
        padding-top: 10px;
        background-color: black;
        width: 120px;
        height: 40px;
        float: left;
        text-align: center;
        text-decoration: none;
        font-weight: bold;
    }

        #Datmua a:hover {
            background-color: gray;
            color: yellow;
        }
</style>
@model MVCShoesShop.Models.SAN_PHAM

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="font-weight:bold; text-align:center">Chi tiết sản phẩm</h1>

<div style="width:40%; float:left; border-left: dotted 1px; border-color:azure">
    <img src="@Url.Content("~/images/"+ Model.Images)" style="width:500px ; height:400px" />
</div>
<div style="width:60%; float:left; padding-left:100px">
    <h2 style="font-weight:bold; color:red">Tên sản phẩm : @Model.TenSP </h2>
    <h3 style="text-align:justify"><span style="font-weight:bold"> Loại sản phẩm : </span> @Model.LOAI_SAN_PHAM.TenLoai </h3>
    <h3 style="text-align:justify"><span style="font-weight:bold"> Số lượng còn : </span> @Model.SoLuongCon </h3>
    <h3 style="text-align:justify"><span style="font-weight:bold"> Đơn giá : </span>$ @String.Format("{0:0.00}", Model.DonGia) </h3>
    <div id="Datmua">
        <p>
            <a href="@Url.Action("Edit", "SanPham", new { id = Model.MaSP }) " class="list-group-item" style="float:right">
                Sửa
            </a>
            <hr>
            <a href="@Url.Action("Shoes", "SanPham") " class="list-group-item" style="float:right">
                Trở về
            </a>
        </p>
    </div>
</div>
<dl class="dl-horizontal">
    <dt>
    </dt>
    <dd>
    </dd>
</dl>


