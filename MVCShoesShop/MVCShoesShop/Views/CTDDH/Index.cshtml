@model IEnumerable<MVCShoesShop.Models.CT_DON_DAT_HANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center; font-weight:bold">Quản lý đơn đặt hàng</h1>

<table class="table">
    <tr>
        <th style="text-align:center">
            Mã đơn đặt hàng
        </th>
        <th style="text-align:center">
            Tên sản phẩm
        </th>
        <th style="text-align:center">
            Số lượng
        </th>
        <th style="text-align:center">
            Đơn giá
        </th>
        <th style="text-align:center">
            Thành tiền
        </th>
        <th style="text-align:center"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.DON_DAT_HANG.MaDDH)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.SAN_PHAM.TenSP)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td style="text-align:center">
                @String.Format("{0:0.00}", item.DonGia) $
            </td>
            <td style="text-align:center">
                @String.Format("{0:0.00}", item.ThanhTien) $
            </td>
            <td style="text-align:center">
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaDDH }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaDDH })
            </td>
        </tr>
    }

</table>
