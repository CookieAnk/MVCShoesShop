@model MVCShoesShop.Models.CT_DON_DAT_HANG

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center; font-weight:bold">Xóa đơn đặt hàng</h2>

<h3 style="text-align:center">Bạn có muốn xóa đơn đặt hàng này ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <h3 style="font-weight:bold">Thông tin đơn đặt hàng</h3>
        @*Tên sản phẩm*@
        <dt>
            Tên sản phẩm :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SAN_PHAM.TenSP)
        </dd>
        @*Số lượng*@
        <dt>
            Số lượng :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SoLuong)
        </dd>
        @*Đơn giá*@
        <dt>
            Đơn giá :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DonGia) $
        </dd>
        @*Thành tiền*@
        <dt>
            Thành tiền :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ThanhTien) $
        </dd>
        @*Ghi chú*@
        <dt>
            Ngày lập đơn :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DON_DAT_HANG.NgayLapDDH)
        </dd>
        @*Button*@
        <dt></dt>
        <dd>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                    <input type="submit" value="Xóa" class="btn btn-default" style="background-color:yellowgreen; color:black; font-weight:bold; font-size:13pt; padding:5px 15px 5px 15px; text-align:center" />
                    <a href="@Url.Action("Index","CTDDH")" style="background-color:burlywood; color:black; font-weight:bold; font-size:13pt; padding:8px 15px 8px 15px; text-align:center">
                        Trở về
                    </a>
                </div>
            }
        </dd>
    </dl>
</div>
