@model IEnumerable<MVCShoesShop.Models.SAN_PHAM>

@{
    ViewBag.Title = "spTheoLoai";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h1 class="text-center" style="font-weight:bold">&bullet; CATEGORY SHOES &bullet;</h1>
<div class="allcontain">
    <div class="grid">
        <div class="row">
            @foreach (var pro in Model)
            {
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="txthover">
                        <img src="~/images/@pro.Images" alt="car1" style="width:350px;height:350px">
                        <div class="txtcontent">
                            <div class="stars">
                                <div class="glyphicon glyphicon-star"></div>
                                <div class="glyphicon glyphicon-star"></div>
                                <div class="glyphicon glyphicon-star"></div>
                            </div>
                            <div class="simpletxt">
                                <h3 class="name">Name : @pro.TenSP</h3>
                                <p>
                                    @pro.LOAI_SAN_PHAM.TenLoai
                                </p>
                                <h4 class="price">$ @String.Format("{0:0.00}", pro.DonGia)</h4>
                                <a href="@Url.Action("Details", "Shop", new { id = pro.MaSP })" class="list-group-item" style="width:100px; text-align:center; float:left; background-color:white; font-weight:bold; color:black; width:110px">
                                    Details
                                </a>
                                <a href="@Url.Action("ThemGioHang", "GioHang", new { @iMaSP = pro.MaSP, @strURL=Request.Url.ToString() }) " class="list-group-item" style="width:100px; text-align:center; float:right; background-color:black; font-weight:bold; color:white; width:110px">
                                    Add to Cart
                                </a>
                                @*<button style="font-weight:bold; width:100px">@Html.ActionLink("Add to Cart","ThemGioHang","GioHang", new { @iMaSP = pro.MaSP, @strURL = Request.Url.ToString() })</button><br>*@
                                <br>
                                <br>
                                <br>
                            </div>
                            <div class="stars2">
                                <div class="glyphicon glyphicon-star"></div>
                                <div class="glyphicon glyphicon-star"></div>
                                <div class="glyphicon glyphicon-star"></div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="bottommenu">
        <div class="bottomlogo">
            <span class="dotlogo">&bullet;</span><img src="~/images/adidas.jpg" alt="logo1" style="height:300px; width:300px"><span class="dotlogo">&bullet;;</span>
        </div>
        @*<ul class="nav nav-tabs bottomlinks">
                <li role="presentation"><a href="#/" role="button">ABOUT US</a></li>
                <li role="presentation"><a href="#/">CATEGORIES</a></li>
                <li role="presentation"><a href="#/">PREORDERS</a></li>
                <li role="presentation"><a href="#/">CONTACT US</a></li>
                <li role="presentation"><a href="#/">RECEIVE OUR NEWSLETTER</a></li>
            </ul>*@
        <h1 style="text-align:center; font-weight:bold ;color:darkolivegreen">
            Adidas is the best
        </h1>
        <img src="~/images/line.png" alt="line"> <br>
        <div class="bottomsocial" style="text-align:center">
            <a href="#" style="font-size:15pt"><i class="fa fa-facebook"></i></a>
            <a href="#" style="font-size:15pt"><i class="fa fa-twitter"></i></a>
            <a href="#" style="font-size:15pt"><i class="fa fa-google-plus"></i></a>
            <a href="#" style="font-size:15pt"><i class="fa fa-pinterest"></i></a>
        </div>
    </div>
</div>