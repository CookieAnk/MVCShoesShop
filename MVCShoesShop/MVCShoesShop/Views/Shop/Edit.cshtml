@model MVCShoesShop.Models.KHACH_HANG

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h1 style="text-align:center; font-weight:bold">Edit your information</h1>
<table align="center">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaKH)
        @*Tên khách hàng*@
        <tr style="height:40px">
            <td style="text-align:right; font-weight:bold">
                Full name  &nbsp; &nbsp;
            </td>
            <td>
                @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
            </td>
        </tr>
        @*Địa chỉ*@
        <tr style="height:40px">
            <td style="text-align:right; font-weight:bold">
                Address  &nbsp; &nbsp;
            </td>
            <td>
                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </td>
        </tr>
        @*Số điện thoại*@
        <tr style="height:40px">
            <td style="text-align:right; font-weight:bold">
                Phone  &nbsp; &nbsp;
            </td>
            <td>
                @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
            </td>
        </tr>
        @*Email*@
        <tr style="height:40px">
            <td style="text-align:right; font-weight:bold">
                Email  &nbsp; &nbsp;
            </td>
            <td>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </td>
        </tr>
        @*IDLogin*@
        <tr style="height:40px">
            <td style="text-align:right; font-weight:bold">
                IDLogin  &nbsp; &nbsp;
            </td>
            <td>
                @Html.EditorFor(model => model.IDLogin, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.IDLogin, "", new { @class = "text-danger" })
            </td>
        </tr>
        @*Pass*@
        <tr style="height:40px">
            <td style="text-align:right; font-weight:bold">
                Pass  &nbsp; &nbsp;
            </td>
            <td>
                @Html.PasswordFor(model => model.Pass, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Pass, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr style="height:40px">
            <td style="text-align:right">
                <input type="submit" value="Save" class="btn btn-default" style="background-color:yellowgreen; color:black; font-weight:bold; padding: 8px 20px 8px 20px;" />
            </td>
            <td>
                &nbsp; &nbsp;&nbsp; &nbsp;
                <a href="@Url.Action("Index","Shop")" style="background-color:lightcoral; color:black; font-weight:bold; padding: 10px 15px 10px 15px;">
                    Back to home
                </a>
            </td>
        </tr>

    }
</table>


