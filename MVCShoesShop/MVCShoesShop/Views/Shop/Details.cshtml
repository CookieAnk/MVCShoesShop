<style type="text/css">
    #Datmua a {
        clear: both;
        color: navajowhite;
        display: block;
        padding-top: 10px;
        background-color: black;
        width: 120px;
        height: 40px;
        float: left;
        text-align: center;
        text-decoration: none;
        font-weight: bold;
    }

        #Datmua a:hover {
            background-color: gray;
            color: yellow;
        }
</style>

@model MVCShoesShop.Models.SAN_PHAM

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h1 style="text-align:center; font-weight:bold">Chi tiết sản phẩm</h1>

<div>
    <div style="width:40%; float:left; border-left: dotted 1px; border-color:azure">
        <img src="~/images/@Model.Images" style="width:520px ; height:550px" />
    </div>
    <div style="width:60%; float:left; padding:10px">
        <h2 style="font-weight:bold; color:red">Tên sản phẩm : @Model.TenSP </h2>
        <h3 style="text-align:justify"><span style="font-weight:bold"> Đơn giá : </span>$ @String.Format("{0:0.00}", Model.DonGia) </h3>
        <h3 style="text-align:justify"><span style="font-weight:bold"> Tên loại : </span>@Model.LOAI_SAN_PHAM.TenLoai </h3>
        <div id="Datmua">
            <a href="@Url.Action("ThemGioHang", "GioHang", new { @iMaSP = @Model.MaSP, @strURL=Request.Url.ToString() }) " class="list-group-item">
                Đặt mua
            </a>
        </div>
    </div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
        </dt>
        <dd>
        </dd>
    </dl>
</div>
